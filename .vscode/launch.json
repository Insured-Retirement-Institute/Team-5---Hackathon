{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Debug Receiver + Sender",
      "configurations": [
        "Debug Python Webhook Receiver",
        "Run Python Webhook Sender"
      ],
      "stopAll": true
    },
    {
      "name": "Debug Receiver + Sender (Delayed)",
      "configurations": [
        "Debug Python Webhook Receiver",
        "Run Python Webhook Sender (Delayed)"
      ],
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "name": "Debug Python Webhook Receiver",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app:app", "--host", "0.0.0.0", "--port", "8000", "--reload"],
      "cwd": "${workspaceFolder}/src/webhooks/receiver",
      "env": {
        "ATS_WEBHOOK_SECRET": "local-dev-shared-secret"
      },
      "console": "integratedTerminal",
      "stopAtEntry": false
    },
    {
      "name": "Run Python Webhook Sender",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/webhooks/sender/sender.py",
      "cwd": "${workspaceFolder}",
      "args": ["src/webhooks/receiver/examples/payload.json"],
      "env": {
        "WEBHOOK_URL": "http://localhost:8000/hooks/ats-status",
        "ATS_WEBHOOK_SECRET": "local-dev-shared-secret"
      },
      "console": "integratedTerminal",
      "stopAtEntry": false
    },
    {
      "name": "Run Python Webhook Sender (Delayed)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/webhooks/sender/sender.py",
      "cwd": "${workspaceFolder}",
      "args": ["src/webhooks/receiver/examples/payload.json"],
      "env": {
        "WEBHOOK_URL": "http://localhost:8000/hooks/ats-status",
        "ATS_WEBHOOK_SECRET": "local-dev-shared-secret",
        "SENDER_DELAY_MS": "2000"
      },
      "console": "integratedTerminal",
      "stopAtEntry": false
    }
  ]
}
